@page
@model NewsWebsite.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Категорії";
}

<div class="page-header">
    <h1>Категорії</h1>
    @if (Model.IsAdmin)
    {
        <button class="btn btn-primary btn-small" data-modal-open="add-cat">+ Додати</button>
    }
</div>

<div class="categories-grid">
    @foreach (var cat in Model.Categories)
    {
        <a asp-page="/News/Index" asp-route-categoryId="@cat.Id" class="category-card">
            <div class="category-card__name">@cat.Name</div>
            <div class="category-card__count">@cat.News.Count статей</div>
        </a>
    }
</div>

@if (Model.IsAdmin)
{
    <div class="modal-overlay" id="add-cat">
        <div class="modal-box">
            <div class="modal-title">Нова категорія</div>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Input.Name" class="form-label">Назва</label>
                    <input asp-for="Input.Name" class="form-control" placeholder="Назва категорії" />
                    <span asp-validation-for="Input.Name" class="form-error"></span>
                </div>
                <div class="modal-actions" style="margin-top:1rem">
                    <button type="button" class="btn btn-ghost" data-modal-close>Скасувати</button>
                    <button type="submit" class="btn btn-primary">Створити</button>
                </div>
            </form>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}