@page
@model NewsWebsite.Pages.News.CreateModel
@{
    ViewData["Title"] = "Нова стаття";
}

<div class="form-card">
    <div class="form-card__header">Нова стаття</div>

    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Title" class="form-label">Заголовок</label>
            <input asp-for="Input.Title" class="form-control" placeholder="Заголовок статті" />
            <span asp-validation-for="Input.Title" class="form-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.CategoryId" class="form-label">Категорія</label>
            <select asp-for="Input.CategoryId" class="form-control" asp-items="Model.CategorySelectList">
                <option value="">— Оберіть категорію —</option>
            </select>
            <span asp-validation-for="Input.CategoryId" class="form-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Description" class="form-label">Текст статті</label>
            <textarea asp-for="Input.Description" class="form-control" rows="12"
                      placeholder="Текст статті..."></textarea>
            <span asp-validation-for="Input.Description" class="form-error"></span>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Опублікувати</button>
            <a asp-page="Index" class="btn btn-ghost">Скасувати</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}