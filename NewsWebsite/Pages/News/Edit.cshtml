@page "{id:int}"
@model NewsWebsite.Pages.News.EditModel
@{
    ViewData["Title"] = "Редагування";
}
<div class="form-card">
    <div class="form-card__header">Редагування статті</div>
    <form method="post">
        <input type="hidden" asp-for="Input.Id" />
        <partial name="_NewsFormFields" />
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Зберегти</button>
            <a asp-page="Details" asp-route-id="@Model.Input.Id" class="btn btn-ghost">Скасувати</a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}