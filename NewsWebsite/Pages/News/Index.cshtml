@page
@model NewsWebsite.Pages.News.IndexModel
@using NewsWebsite.Models
@{
    ViewData["Title"] = Model.CategoryName ?? "Всі новини";
    ViewData["ActiveCategory"] = Model.CategoryId?.ToString();
}
<div class="page-header">
    <h1>@(Model.CategoryName ?? "Всі новини")</h1>
    @if (Model.CanPublish)
    {
        <a asp-page="Create" class="btn btn-primary btn-small">+ Нова стаття</a>
    }
</div>
@if (Model.NewsList.Any())
{
    <div class="news-list">
        @foreach (var news in Model.NewsList)
        {
            <partial name="_NewsItem" model='new NewsItemViewModel { News = news, CanEdit = Model.CanEdit, CanDelete = Model.CanDelete }' />
        }
    </div>
}
else
{
    <div class="empty-state">
        <div class="empty-state__title">В цій категорії поки немає новин</div>
    </div>
}
