@page
@model NewsWebsite.Pages.Users.RegisterModel
@{
    ViewData["Title"] = "Реєстрація";
}

<div class="auth-wrap">
    <div class="auth-title">Реєстрація</div>
    <div class="auth-subtitle">Оберіть роль у редакції</div>

    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Username" class="form-label">Ім'я користувача</label>
            <input asp-for="Input.Username" class="form-control" autofocus />
            <span asp-validation-for="Input.Username" class="form-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Role" class="form-label">Роль</label>
            <select asp-for="Input.Role" class="form-control">
                <option value="">— Оберіть роль —</option>
                <option value="Writer">Writer — публікація статей</option>
                <option value="Admin">Admin — повний доступ</option>
            </select>
            <div class="form-hint">Writer може лише публікувати. Admin може редагувати та видаляти.</div>
            <span asp-validation-for="Input.Role" class="form-error"></span>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Зареєструватись</button>
        </div>
    </form>

    <div class="auth-switch">
        Вже є акаунт? <a asp-page="Login">Увійти</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}