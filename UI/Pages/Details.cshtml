@page "{id:int}"
@model DetailsModel
@using BLL.DTO
@{
    ViewData["Title"] = Model.News.Title;
}

<div class="card mb-3">
    <div class="card-header bg-primary text-white">
        <h3>@Model.News.Title</h3>
    </div>
    <div class="card-body">
        <p>@Model.News.Description</p>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Категорія:</strong> @Model.News.Category?.Name</li>
            <li class="list-group-item"><strong>Автор:</strong> @Model.News.Author?.Username</li>
            <li class="list-group-item"><strong>Дата:</strong> @Model.News.Date.ToString("dd.MM.yyyy")</li>
            <li class="list-group-item"><strong>Перегляди:</strong> @Model.News.Views</li>
        </ul>
    </div>
    <div class="card-footer">
        <a class="btn btn-secondary" asp-page="Index">Назад до списку</a>
    </div>
</div>